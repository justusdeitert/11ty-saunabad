<footer id="footer" class="{{ colorClass }} pt-8 md:pt-[8vw] pb-0 md:pb-[5vw] px-8 sm:px-16 md:px-[6vw]">
    <div class="grid grid-cols-1 gap-20 md:grid-cols-2">
        <div class="items-center justify-center hidden md:flex">
            <p class="text-center">Wir freuen uns Sie in unserem <br> Saunabad begrüßen zu dürfen.
            </p>
        </div>
        <div class="relative flex flex-col items-center justify-center">
            <div class="absolute -left-10 w-0.5 -top-[20%] h-[140%] bg-dark hidden md:block"></div>
            {% include 'icons/icon-house' classnames: 'w-8 lg:w-[3vw] stroke-dark' %}
            <p class="max-w-md mx-auto mt-4 text-center">Rykestraße 10 <br> 10405 Berlin</p>
        </div>
    </div>
</footer>

<section class="{{ colorClass }} flex flex-col-reverse items-center gap-8 px-6 md:px-[2vw] pb-8 py-6 md:py-[2vw] md:flex-row">
    <div class="flex gap-4">
        <a href="https://www.instagram.com/saunabad_berlin/" target="_blank">
            {% include 'icons/icon-instagram' classnames: 'w-5 lg:w-[1.6vw] stroke-dark' %}
        </a>
        <a href="https://www.facebook.com/Saunabad-Berlin-Prenzlauer-Berg-176322405726284/" target="_blank">
            {% include 'icons/icon-facebook' classnames: 'w-5 lg:w-[1.6vw] stroke-dark' %}
        </a>
    </div>
    <nav class="flex flex-wrap justify-center gap-4 uppercase md:gap-6 md:ml-auto">
        <!-- https://www.11ty.dev/docs/plugins/navigation/#advanced-all-rendering-options-for-eleventynavigationtohtml -->
        {% assign navPages = collections.all | eleventyNavigation %}
        {%- for entry in navPages %}
        <a href="{{ entry.url | url }}">{{ entry.title }}</a>
        {%- endfor %}
    </nav>
</section>