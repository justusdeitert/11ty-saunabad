<footer id="footer" class="bg-blue h-96 px-24 pt-24">

    <div class="grid grid-cols-2 gap-20">
        <div class="flex justify-items-center items-center">
            <p class="text-xl text-center max-w-sm mx-auto">Wir freuen uns Sie in unserem Saunabad begrüßen zu dürfen.
            </p>
        </div>

        <div class="flex flex-col justify-center items-center relative">
            <div class="absolute -left-10 w-0.5 h-full bg-dark"></div>
            {% include 'svg/icon-house' %}
            <p class="text-3xl text-center max-w-sm mx-auto font-light mt-4">Rykestraße 10 <br> 10405 Berlin</p>
        </div>
    </div>

    <div class="flex">

        <div class="flex gap-4">
            <a href="https://www.instagram.com/saunabad_berlin/" target="_blank">
                {% include 'svg/icon-instagram' %}
            </a>
            <a href="https://www.facebook.com/Saunabad-Berlin-Prenzlauer-Berg-176322405726284/" target="_blank">
                {% include 'svg/icon-facebook' %}
            </a>
        </div>

        <nav class="flex uppercase gap-4">
            <!-- https://www.11ty.dev/docs/plugins/navigation/#advanced-all-rendering-options-for-eleventynavigationtohtml -->
            {% assign navPages = collections.all | eleventyNavigation %}
            {%- for entry in navPages %}
            <a class="text-xl font-light" href="{{ entry.url | url }}">{{ entry.title }}</a>
            {%- endfor %}
        </nav>
    </div>

</footer>