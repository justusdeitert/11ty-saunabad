<footer id="footer" class="bg-blue h-96 p-24 grid grid-cols-2 gap-20">
    <div class="flex justify-items-center items-center">
        <p class="text-xl text-center max-w-sm mx-auto">Wir freuen uns Sie in unserem Saunabad begrüßen zu dürfen.</p>
    </div>

    <div class="flex flex-col justify-center items-center relative">
        <div class="absolute -left-10 w-0.5 h-full bg-dark"></div>
        {% include 'svg/icon-house' %}
        <p class="text-3xl text-center max-w-sm mx-auto font-light mt-4">Rykestraße 10 <br> 10405 Berlin</p>
    </div>

    <nav>
        <!-- Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white" -->
        <!-- https://www.11ty.dev/docs/plugins/navigation/#advanced-all-rendering-options-for-eleventynavigationtohtml -->
        {% assign navPages = collections.all | eleventyNavigation %}
        {%- for entry in navPages %}
        {% assign classes = "text-gray-300 hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium" %}
        {% if entry.url == page.url %}
        {% assign classes = "bg-gray-900 text-white block px-3 py-2 rounded-md text-base font-medium" %}
        {% endif %}
        <a class="{{ classes }}" href="{{ entry.url | url }}">{{ entry.title }}</a>
        {%- endfor %}
    </nav>
</footer>